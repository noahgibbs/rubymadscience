        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Future: Google Analytics? -->

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="page-top">
    <%= render "shared/navbar" %>
    <%= render "shared/login" %>

    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <h1>This is a Great Big Top Header</h1>
                <hr>
                <p>And this is smaller text that goes under it.</p>
                <a href="#about" class="btn btn-primary btn-xl page-scroll">Find Out More</a>
          </div>
      </div>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <!-- Footer-->
    <footer class="bg-light py-5">
        <div class="container"><div class="small text-center text-muted">Copyright Â© 2020 - Noah Gibbs
            <br/> Based on the <a href="https://startbootstrap.com/themes/creative/" target="_blank">Creative</a> theme from <a href="https://startbootstrap.com/" target="_blank">Start Bootstrap</a></div></div>
    </footer>

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>

  <!-- Plugin JavaScript -->
  <script src="js/jquery.easing.min.js"></script>
  <script src="js/jquery.fittext.js"></script>
  <script src="js/wow.min.js"></script>

  <!-- Custom Theme JavaScript -->
  <script src="js/creative.js"></script>

  </body>
</html>
