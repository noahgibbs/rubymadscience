<div class="container">

<h1>Users</h1>

<table class="table">
    <thead>
        <th>Email</th>
        <th>Created At</th>
        <th>Confirmed?</th>
        <th>Last Reminder</th>
    </thead>
    <tbody>
        <% @users.each do |u| %>
            <tr>
                <td><%= u.email ? u.email : "NULL" %></td>
                <td><%= time_ago_in_words(u.created_at) %> ago / <%= u.created_at %></td>
                <td><%= u.confirmed_at ? "YES" : "NO" %></td>
                <td><%= u.user_reminder ? time_ago_in_words(u.user_reminder.last_reminder) : "NULL" %> ago / <%= u.user_reminder ? u.user_reminder.last_reminder : "NULL" %></td>
            </tr>
        <% end %>
    </tbody>
</table>

</div>
